@model IEnumerable<Business.Interop.Data.UserDto>

@{
    ViewData["Title"] = "Пользователи";
}

<p><a style="font-size: 25px;" asp-controller="Home" asp-action="Index">Главная</a></p>
<br />

<h2>Пользователи</h2>
<p><a style="font-size: 25px;" asp-controller="User" asp-action="Create">Добавить</a></p>

<hr />

<div class="container" style="border-radius: 5px">
    <div class="row" style="border-radius: 3px">
        <div class="col-3"><b>ФИО</b></div>
        <div class="col-3"><b>Электронная почта</b></div> 
    </div>
</div>

@foreach (var item in Model)
{
    <hr />

    <div class="container" style="border-radius: 5px">
        <div class="row" style="border-radius: 3px">
            <div class="col-3">@item.FullName</div>
            <div class="col-3">@item.Email</div>

            <div class="col align-self-end">
                <div align="right">
                    <div class="btn-group">
                        @Html.ActionLink("Статистика", "GetStatistics", new { item.Id, item.FullName, item.Email }, new { @style = "font-size: 20px;" })
                        <div style="width: 20px;"></div>
                        @Html.ActionLink("Подробнее", "Update", new { item.Id }, new { @style = "font-size: 20px;" })
                        <div style="width: 20px;"></div>
                        @Html.ActionLink("Удалить", "Delete", new { item.Id }, new { @style = "font-size: 20px;" })
                    </div>
                </div>
            </div>
        </div>
    </div>
}