@model Business.Interop.Data.ExerciseDto

@{ ViewData["Title"] = "Добавление упражнения"; }

<p><a style="font-size: 25px;" asp-controller="Exercise" asp-action="Index">Назад</a></p>
<br />

<h2>Упражнение</h2>

<hr />

<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" value="@(Model is null ? 0 : Model.Id)" name="Id" />

            <div class="form-group">
                <label asp-for="Name" class="control-label">Название</label>

                <input asp-for="Name" class="form-control" maxlength="100" />

                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Добавить" class="btn-outline-dark" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}